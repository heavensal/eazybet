              step: 1,
              class: "p-2 bg-[var(--bg-card)] border-2 border-white rounded-lg",
              autofocus: false
            %>

            <%= f.select :money_type,
              options_for_select([["Coins ğŸª™", "coins"], ["Diamants ğŸ’", "diamonds"]], "coins"),
              {},
              { class: "p-2 bg-[var(--bg-card)] border-2 border-white rounded-lg",
