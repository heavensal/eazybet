            <button class="border-white border-2 p-2 rounded-sm cursor-pointer w-[90%]" type="button" data-action="dialog#close">âŒ Annuler âŒ</button>
          </div>
        <% end %>
      <% else %>
        <div class="flex flex-col items-center justify-center h-[80%] gap-4">
          <p>Connectez-vous pour parier</p>
          <%= link_to "Se connecter", new_user_session_path, data: { turbo: false }, class: "bg-[var(--ezb-red)] rounded-lg px-2.5 py-2 cursor-pointer" %>
        </div>
      <% end %>
    </div>
  </dialog>
</div>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const select = document.querySelector("[name='bet[money_type]']");
    const spans = document.querySelectorAll(".result-span");
    console.log(select);

    select.addEventListener("change", (event) => {
      const selectedValue = event.target.value;
      console.log(selectedValue, 'c moi');

      spans.forEach(span => {
        if (span.dataset.priceTarget === selectedValue) {
          span.style.display = "inline";
        } else {
          span.style.display = "none";
        }
      });
    });

    select.dispatchEvent(new Event("change"));
  });
</script>
